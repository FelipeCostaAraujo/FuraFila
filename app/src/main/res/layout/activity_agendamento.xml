<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".Agendamento.ActivityAgendamento"
    tools:layout_editor_absoluteY="81dp">


    <Spinner
        android:id="@+id/id_horarios"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/textView"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="85dp"
        android:layout_toEndOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="@+id/btn_agendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/txt_Data"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_agendar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@color/red"
        android:text="Agendar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="43dp"
        android:text="Escolha um Horario :"
        app:layout_constraintBottom_toTopOf="@+id/btn_agendar"
        app:layout_constraintEnd_toStartOf="@+id/id_horarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="75dp"
        android:text="Data Escolhida"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/txt_Data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <EditText
        android:id="@+id/txt_Data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textView2"
        android:editable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />


    <EditText
        android:id="@+id/txt_exibirnome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_exibirEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="16dp"
        android:editable="false"
        app:layout_constraintBottom_toTopOf="@+id/txt_exibirEmail"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="@+id/txt_exibirEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_exibirCpf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:editable="false"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="@+id/txt_celular"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txt_exibirEmail" />

    <EditText
        android:id="@+id/txt_exibirEmail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txt_exibirCpf"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="1dp"
        android:editable="false"
        app:layout_constraintBottom_toTopOf="@+id/txt_exibirCpf"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="@+id/txt_exibirCpf"
        app:layout_constraintTop_toBottomOf="@+id/txt_exibirnome" />

    <EditText
        android:id="@+id/txt_celular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="64dp"
        android:text="Digite seu Telefone"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/txt_celular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="92dp"
        android:layout_height="67dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/txt_Data"
        app:layout_constraintStart_toStartOf="@+id/txt_Data"
        app:layout_constraintTop_toBottomOf="@+id/txt_exibirCpf">


        <RadioButton
            android:id="@+id/c_amanha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amanha" />

        <RadioButton
            android:id="@+id/c_hoje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Hoje" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>